<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coloBackground"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:gravity="center_horizontal"
                android:text="Team A"
                android:textSize="20sp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/team_a_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_6sdp"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#000000"
                android:textSize="70sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:gravity="center"
                android:onClick="score_4_A"
                android:text="+4 score"
                android:textSize="15sp"
                android:textColor="@color/colorText"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:gravity="center"
                android:onClick="score_3_A"
                android:text="+3 score"
                android:textSize="15sp"
                android:textColor="@color/colorText"
                android:background="@drawable/rounded_button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:gravity="center"
                android:onClick="score_2_A"
                android:text="+2 score"
                android:textSize="15sp"
                android:textColor="@color/colorText"
                android:background="@drawable/rounded_button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:layout_gravity="center"
                android:onClick="score_1_A"
                android:text="+1 score"
                android:textSize="15sp"
                android:textColor="@color/colorText"
                android:background="@drawable/rounded_button"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#006064" />

        <LinearLayout
            android:id="@+id/activity2_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:gravity="center_horizontal"
                android:text="Team B"
                android:textSize="20sp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/team_b_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_6sdp"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#000000"
                android:textSize="70sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:onClick="score_4_B"
                android:text="+4 score"
                android:textSize="15sp"
                android:textColor="@color/colorText"
                android:background="@drawable/rounded_button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:gravity="center"
                android:onClick="score_3_B"
                android:text="+3 score"
                android:textSize="15sp"
                android:textColor="@color/colorText"
                android:background="@drawable/rounded_button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:gravity="center"
                android:onClick="score_2_B"
                android:text="+2 score"
                android:textSize="15sp"
                android:textColor="@color/colorText"
                android:background="@drawable/rounded_button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:layout_gravity="center"
                android:onClick="score_1_B"
                android:text="+1 score"
                android:textSize="15sp"
                android:textColor="@color/colorText"
                android:background="@drawable/rounded_button"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_60sdp"
        android:onClick="reset"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_reset_button"
        android:text="reset" />

</RelativeLayout>